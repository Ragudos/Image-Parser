{
    "plugins": [
        "plugins/markdown"
    ],
    "source": {
        "include": [
            "./packages/utils",
            "./packages/core"
        ]
    },
    "opts": {
        "destination": "./docs",
        "recurse": true,
        "template": "node_modules/docdash",
        "readme": "README.md"
    },
    "docdash": {
        "static": true,
        "sort": true,
        "search": true,
        "collapse": true,
        "typedefs": true,
        "removeQuotes": "none",
        "scripts": [],
        "menu": {
            "My GitHub": {
                "href": "https://github.com/Ragudos",
                "target": "_blank",
                "class": "menu-item",
                "id": "repository"
            }
        }
    },
    "templates": {
        "default": {
            "useLongnameInNav": true
        }
    }
}